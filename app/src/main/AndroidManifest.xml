<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="liuvasconcelos.costumerloyalty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".introductionPage.IntroPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".login.LoginActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".registrationPage.RegistrationPageActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".forgetPasswordPage.ForgetPasswordPageActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".mainPage.MainPageActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

    <meta-data  android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@drawable/ic_folder_special_black_24dp"/>
</manifest>